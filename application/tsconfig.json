{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016", "es2015", "es5", "dom"],
    "strict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "keyofStringsOnly": true
  },
  "include": ["src/**/*", "src/*.tsx"]
}
